<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
    </androidx.camera.view.PreviewView>

    <delhi.university.ramjas.college.customviews.ScannerOverlay
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        app:line_color="@color/green"
        app:line_speed="4"
        app:line_width="4"
        app:square_height="125"
        app:square_width="600" />

    <TextView
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/muli_semibold"
        android:textColor="@color/white"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAlignment="center"
        android:text="Align the barcode horizontally in the above box and let it process for few seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>